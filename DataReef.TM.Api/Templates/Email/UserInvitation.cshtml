@model DataReef.TM.Classes.UserInvitationTemplate
@{
    Layout = "_Layout.cshml";
}

<div class="content userInvitation">
    <div class="row">
        @Model.InviterName has invited you to join IGNITE. On your iOS device you will need to download the app to begin.
    </div>
    @if (Model.UserWasDeleted)
    {
        <div class="row">
            Your user was deleted but is now restored because of this invitation. You may use your credentials to log in.
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.DownloadURL))
    {
        <div class="row">
            <a class="button" href="@Raw(Model.DownloadURL)">Download app</a>
        </div>
        <div class="row">
            <p>After downloading the app, on your device, tap the link below to accept this invitation.</p>
        </div>
    }
    else
    {
        <div class="row">
            <p>Please check you e-mail for the latest Test Flight invitation or contact our Support Team to receive a new one. After installing the app, tap the link below to accept this invitation.</p>
        </div>        
    }

    <div class="row">
        <a class="button" href="@Raw(Model.InvitationURL)">Accept invitation</a>
    </div>
</div>